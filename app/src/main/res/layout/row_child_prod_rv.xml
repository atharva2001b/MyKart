<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="230dp"
        android:backgroundTint="#c7ebe6"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_img_holder"
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:elevation="0dp"
                app:cardCornerRadius="1dp"
                >

                <ImageView
                    android:id="@+id/img_prod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_prod_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/card_img_holder"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-5dp"
                android:text="Jeans"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txt_prod_name"
                android:layout_marginStart="10dp"
                android:text="499 Rs"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_offer_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/txt_prod_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_price"
                android:text="699 Rs"
                android:textColor="#ff3b3b" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>